{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "lib": ["ES6"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["src/server/**/*.ts"],
  "exclude": ["test/", "src/client/**/*", "vite.config.ts", "node_modules"]
}
