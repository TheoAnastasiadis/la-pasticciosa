{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "lib": ["ES6"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/server/**/*.ts", "cypress"],
  "exclude": [
    "test/",
    "src/client/**/*",
    "vite.config.ts",
    "node_modules/**",
    "cypress"
  ]
}
