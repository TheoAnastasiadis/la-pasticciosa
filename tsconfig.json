{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNEXT",
    "lib": ["ES5", "ES2015.Promise"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "src/**/*.vue",
    "vite.config.ts",
    "inkline.config.ts"
  ]
}
